<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvCityName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"/>

        <!-- Botão para definir como padrão -->
        <ImageButton
            android:id="@+id/btnSetDefault"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_home_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:visibility="gone"
            app:tint="@color/purple_500"/>

        <!-- Ícone indicador de cidade padrão -->
        <ImageView
            android:id="@+id/ivDefaultIndicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home"
            android:visibility="gone"
            app:tint="@color/purple_500"/>

        <!-- Novo botão de delete -->
        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            app:tint="@color/error_red"/>
    </LinearLayout>
</androidx.cardview.widget.Card-View>